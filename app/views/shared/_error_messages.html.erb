<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      The form was not saved because it contains <%= pluralize(@user.errors.count, "error") %>:
    </div>
    <ul class="text-danger">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>