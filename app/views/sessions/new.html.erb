<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: log_in_path, html: { role: 'form' }) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: I18n.t("placeholders.email") %>

      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: I18n.t("placeholders.password") %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "session-remember-me" %>
        <span><%= I18n.t("labels.remember_me") %></span>
      <% end %>

      <%= f.submit I18n.t("labels.log_in_submit"), class: "btn btn-primary" %>
    <% end %>

    <%= render "shared/links" %>
  </div>
</div>